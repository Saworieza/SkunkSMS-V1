= form_for @exam do |f|
  - if @exam.errors.any?
    #error_explanation
      %h2= "#{pluralize(@exam.errors.count, "error")} prohibited this exam from being saved:"
      %ul
        - @exam.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :term
    = f.collection_select :term_id, Term.order(:name), :id, :name, include_blank: true
    / = f.text_field :term
  .actions
    = f.submit 'Save'
