= form_for @mark do |f|
  - if @mark.errors.any?
    #error_explanation
      %h2= "#{pluralize(@mark.errors.count, "error")} prohibited this mark from being saved:"
      %ul
        - @mark.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :mark
    = f.text_field :mark
  .field
    = f.label :subject
    = f.text_field :subject
  .field
    = f.label :result
    = f.text_field :result
  .actions
    = f.submit 'Save'
